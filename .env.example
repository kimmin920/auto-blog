# LLM provider: openai | cloudflare
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4.1-mini
OPENAI_VISION_MODEL=gpt-4o-mini

# Cloudflare Workers AI (Meta Llama)
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_MODEL=@cf/meta/llama-3.1-8b-instruct
CLOUDFLARE_VISION_MODEL=@cf/meta/llama-3.2-11b-vision-instruct

# Threads OAuth
THREADS_APP_ID=1234567890
THREADS_APP_SECRET=your_threads_app_secret
THREADS_REDIRECT_URI=AUTO
THREADS_SCOPE=threads_basic
THREADS_API_BASE=https://graph.threads.net/v1.0

# Google OAuth (login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=AUTO

# Token economy
INITIAL_SIGNUP_TOKENS=100

# Local HTTPS
SSL_KEY_PATH=/absolute/path/to/localhost-key.pem
SSL_CERT_PATH=/absolute/path/to/localhost.pem

# App
DB_PATH=./data/blog-auto.sqlite
UPLOAD_DIR=./data/uploads
PORT=4321
HOST=0.0.0.0
